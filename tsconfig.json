{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "types": ["node", "obsidian"],
    "baseUrl": "."
  },
  "include": [
    "main.ts",
    "utils/*.ts",
    "views/*.ts",
    "settings/*.ts",
    "modals/*.ts",
    "js/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}