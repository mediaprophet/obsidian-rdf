{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "types": ["node", "obsidian", "mermaid"],
    "baseUrl": ".",
    "paths": {
      "markdown-ld": ["libs/markdown-ld/src/index.ts"]
    }
  },
  "include": [
    "main.ts",
    "utils/*.ts",
    "views/*.ts",
    "settings/*.ts",
    "modals/*.ts",
    "libs/markdown-ld/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "*.js",
    "libs/markdown-ld/node_modules",
    "libs/markdown-ld/dist"
  ]
}