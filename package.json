    "remark-stringify": "^11.0.0",
    "@frogcat/ttl2jsonld": "^0.2.4",
    "markdown-ld": "file:./libs/markdown-ld"
  },
  "devDependencies": {
    "@types/mermaid": "^10.9.1",
    "@types/node": "^20.14.12",
    "esbuild": "^0.23.0",
    "obsidian": "^1.6.7",
    "typescript": "^5.5.4"
  }
}